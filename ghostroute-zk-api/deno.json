{
  "tasks": {
    "start": "deno run -A --watch=supabase/functions/ supabase/functions/webhook/index.ts",
    "test": "deno test --allow-all tests/",
    "test:unit": "deno test --no-check --allow-all tests/unit/",
    "test:integration": "deno test --no-check --allow-all tests/integration/",
    "check": "deno fmt && deno lint",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "run:server": "deno run --allow-all src/services/webhook-server.ts"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true
  },
  "fmt": {
    "files": {
      "include": ["supabase/functions/", "src/"],
      "exclude": ["supabase/migrations/"]
    },
    "options": {
      "useTabs": true,
      "lineWidth": 120,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["supabase/functions/", "src/"],
      "exclude": ["supabase/migrations/"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "importMap": "import_map.json"
}
